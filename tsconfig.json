{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/public/*": ["./public/*"],
      "@/fonts": ["./src/app/_fonts"],
      "@/styles/*": ["./src/app/_styles/*"],
      "@/components": ["./src/app/_components/index"],
      "@/application/*": ["./src/application/*"],
      "@/db": ["./src/db/index"],
      "@/di/*": ["./src/di/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/env/*": ["./src/env/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/interface-adapters/*": ["./src/interface-adapters/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
